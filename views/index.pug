extends layout

block head
  script(src="https://apis.google.com/js/platform.js" async defer)
  meta(name="google-signin-client_id" content="42298035966-d017gkbqt9ls1iaac8r6gl6k34of18n7.apps.googleusercontent.com")
  script.
    function onSignIn(googleUser) {
      var profile = googleUser.getBasicProfile();

      // User data
      console.log("ID: " + profile.getId());
      console.log("Name: " + profile.getName());
      console.log("Image URL: " + profile.getImageUrl());
      console.log("Email: " + profile.getEmail());

      // ID token to pass to backend
      var idToken = googleUser.getAuthResponse().id_token;
      console.log("ID Token: " + idToken);
    }

block content
  h1= title
  p Welcome to the app, you probably want the #[a(href="/recipes") recipe page]
  .g-signin2(data-onsuccess="onSignIn")