extends layout

block head
  style.
    .mainTitle {
      margin-bottom: 0.2rem;
    }

    .tagLine {
      margin: 0;
    }

block content
  a(href="/recipes") Back to browse
  h1.mainTitle= recipe.title
  h4.tagLine= recipe.author + " - " + formatTime(recipe.time)
  p= recipe.description
  h2 Ingredients
  ul
    each ingredient in recipe.ingredients
      li= ingredient.ingredient + " : " + ingredient.amount
  button(onclick=`deleteRecipe('${recipe._id}')`) Delete