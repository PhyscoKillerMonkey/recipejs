extends layout

block head
  style.
    .listItem {
      margin-top: 1rem;
    }

    .listItem .title {
      margin: 0 0 0.25rem 0;
      font-size: 1.5em;
      font-weight: bold;
      text-decoration: none;
      color: inherit;
    }

    .listItem .title:hover {
      color: #3986EB;
    }

block content
  h1 Browse Recipes

  a(href="/new") Create a recipe

  #recipeList
    each recipe in recipes
      .listItem
        a.title(href= "/recipes/" + recipe._id)= recipe.title
        .subheading= recipe.author + " - " + formatTime(recipe.time)